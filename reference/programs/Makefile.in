SHELL=/bin/bash
DIR:=$(shell pwd | sed 's@^.*/\([^/]*/[^/]*\)$$@\1@' )

.SUFFIXES: .t2t .tex
.PHONY: clean bootstrap

all: all.tex

all.tex: $(BINS)
	echo $(BINS) | \
	sed -e 's/\.tex[[:space:]]*/\n/g' | \
	sed -e '$$d' -e 's@.*@\\input{$(DIR)/&}@' > $@

%.t2t: 
	./help2t2t.sh $* > $@	

.t2t.tex:
	./txt2tags -t tex --no-header --infile $< --outfile $@

#cleant2t:
#	rm -f *.t2t

clean: 
	rm -f $(DOCS) all.tex
	rm -f *.tex *~
	rm -f Makefile

bootstrap: Makefile.in
	@if [ -z "${CSGSHARE}" ]; then \
	  echo CSGSHARE not defined >&2; \
	  exit 1; \
	fi
	@if ! which csg_property > /dev/null 2>&1; then\
	  echo csg_property not found;\
	  exit 1;\
	fi
	ls `dirname \`which csg_property\``/csg_* | \
	xargs -n1 basename | \
	sed -e 's/.*/\t&.tex\\/' -e '1i BINS=\\' > Makefile
	echo >> Makefile
	cat Makefile.in >> Makefile
	
